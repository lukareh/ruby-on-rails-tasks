<%- if controller_name != 'sessions' %>
  <%= link_to "Already have an account? Sign in", new_session_path(resource_name), style: "color: #ff6b35; text-decoration: none; font-weight: 600;" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "New here? Create an account", new_registration_path(resource_name), style: "color: #ff6b35; text-decoration: none; font-weight: 600;" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot password?", new_password_path(resource_name), style: "color: #757575; text-decoration: none; font-size: 0.9rem; margin-top: 0.5rem; display: block;" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), style: "color: #757575; text-decoration: none; font-size: 0.9rem;" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), style: "color: #757575; text-decoration: none; font-size: 0.9rem;" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, style: "width: 100%; margin-top: 1rem;" %><br />
  <% end %>
<% end %>
