<h1>New User</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 1rem;">
    <%= form.label :name %>
    <%= form.text_field :name, style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :email %>
    <%= form.email_field :email, style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :password %>
    <%= form.password_field :password, style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, style: "width: 100%; padding: 0.5rem;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.check_box :admin %>
    <%= form.label :admin, "Admin User" %>
  </div>

  <div>
    <%= form.submit "Create User", style: "padding: 0.5rem 1rem; background: #007bff; color: white; border: none; cursor: pointer;" %>
  </div>
<% end %>

<br>
<%= link_to "Back", users_path %>
