/* ============================================
   Responsive Design
   ============================================ */

@media (max-width: 768px) {
  .navbar .container {
    flex-direction: column;
    gap: 1rem;
  }
  
  .page-title {
    font-size: 2rem;
  }
  
  .blogs-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .article-container,
  .form-container,
  .comments-section {
    border-radius: 0;
    margin-left: -2rem;
    margin-right: -2rem;
  }
  
  .article-header,
  .article-body,
  .article-actions {
    padding: 2rem 1.5rem;
  }
  
  .article-title {
    font-size: 1.75rem;
  }
  
  .form-container {
    padding: 2rem 1.5rem;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 1rem;
  }
  
  .navbar .container {
    padding: 0 1rem;
  }
  
  .blog-card-footer {
    flex-direction: column;
  }
  
  .form-actions {
    flex-direction: column;
  }
  
  .btn {
    width: 100%;
  }
}
